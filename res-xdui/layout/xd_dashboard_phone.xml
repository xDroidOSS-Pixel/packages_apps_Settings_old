<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:clipToPadding="false">

    <androidx.cardview.widget.CardView
            android:id="@+id/xd_about_phone_header_illustration_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/xd_pref_card_horizontal_padding"
            app:cardBackgroundColor="@android:color/system_accent2_100"
            app:cardCornerRadius="@dimen/xd_pref_card_radius"
            app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?android:attr/listPreferredItemHeightSmall"
            android:gravity="center_vertical"
            android:paddingStart="?android:attr/listPreferredItemPaddingStart"
            android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
            android:clipToPadding="false"
            android:baselineAligned="false">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="-8dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp">

                <ImageView
                    android:id="@+id/xd_avatar"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/xd_phone_owner"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:text="@string/xd_dashboard_device"
                    android:textColor="@android:color/system_accent1_800"
                    android:layout_below="@id/xd_avatar"
                    android:layout_alignStart="@id/xd_avatar"
                    style="@style/xd_text_primary_medium"/>
            
                <TextView
                    android:id="@+id/xd_phone_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/system_accent1_700"
                    android:singleLine="true"
                    android:layout_below="@id/xd_phone_owner"
                    android:layout_alignStart="@id/xd_phone_owner"
                    style="@style/xd_text_secondary"/>
        
            </RelativeLayout>
            
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#00000000"
                app:cardElevation="0dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/xd_about_phone_header_illustration"
                    android:layout_width="100dp"
                    android:layout_height="300dp"
                    android:layout_marginTop="18dp"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="0dp">

                    <com.xdroidui.preferences.xdCardPrefWall
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:elevation="0dp"
                        android:gravity="center"
                        android:orientation="vertical" />

                </androidx.cardview.widget.CardView>
            
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>
